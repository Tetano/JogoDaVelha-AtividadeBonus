<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/holo_orange_dark"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Reiniciar"
            android:layout_width="116dp"
            android:layout_height="45dp" android:id="@+id/btnreset"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.838"/>
    <TextView
            android:layout_width="224dp"
            android:layout_height="59dp" android:id="@+id/textwin"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.707"/>
    <TextView
            android:layout_width="224dp"
            android:layout_height="59dp" android:id="@+id/textvez"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.588"/>
    <android.support.v7.widget.GridLayout
            android:layout_width="266dp"

            android:layout_height="145dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintVertical_bias="0.273" android:id="@+id/gridLayout">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn3" app:layout_column="2"
                app:layout_row="0"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="2"
                android:id="@+id/btn6"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="2"
                android:id="@+id/btn9"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="1"
                android:id="@+id/btn8"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="0"
                android:id="@+id/btn7"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="0"
                android:id="@+id/btn4"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="0" app:layout_column="0"
                android:id="@+id/btn1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="0" app:layout_column="1"
                android:id="@+id/btn2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="1"
                android:id="@+id/btn5"/>
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>